<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/ph_iv_detail_food"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:cardCornerRadius="100dp"
        android:backgroundTint="#CFD2CD"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/ph_tv_detail_food_name"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#CFD2CD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@+id/ph_iv_detail_food" />

    <View
        android:id="@+id/ph_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ph_tv_detail_food_name" />

    <ImageView
        android:id="@+id/ph_iv_carb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/ph_view"
        app:layout_constraintTop_toBottomOf="@+id/ph_view"
        android:contentDescription="@string/placeholder" />

    <TextView
        android:id="@+id/ph_tv_carb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ph_iv_carb"
        app:layout_constraintTop_toTopOf="@+id/ph_iv_carb"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/gilroy_bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/ph_tv_carb"
        android:layout_width="200dp"
        android:layout_height="25dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#CFD2CD"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ph_iv_carb"
        app:layout_constraintStart_toEndOf="@+id/ph_iv_carb"
        app:layout_constraintTop_toBottomOf="@+id/ph_tv_carb_title" />

    <ImageView
        android:id="@+id/ph_iv_protein"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/ph_iv_carb"
        app:layout_constraintTop_toBottomOf="@+id/ph_iv_carb"
        app:tint="?attr/colorPrimary"
        android:contentDescription="@string/placeholder" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ph_tv_protein"
        android:layout_width="200dp"
        android:layout_height="25dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#CFD2CD"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/gilroy_light"
        android:text="@string/protein"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ph_iv_protein"
        app:layout_constraintStart_toEndOf="@+id/ph_iv_protein"
        app:layout_constraintTop_toBottomOf="@+id/ph_tv_title_protein" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ph_tv_veggie"
        android:layout_width="200dp"
        android:layout_height="25dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#CFD2CD"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ph_imageView4"
        app:layout_constraintStart_toEndOf="@+id/ph_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/ph_textView3" />


    <androidx.cardview.widget.CardView
        android:id="@+id/ph_tv_cooking"
        android:layout_width="200dp"
        android:layout_height="25dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#CFD2CD"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ph_imageView2"
        app:layout_constraintStart_toEndOf="@+id/ph_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/ph_textView4" />
    <TextView
        android:id="@+id/ph_tv_title_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ph_iv_protein"
        app:layout_constraintTop_toTopOf="@+id/ph_iv_protein"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/gilroy_bold"/>

    <TextView
        android:id="@+id/ph_textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ph_imageView4"
        app:layout_constraintTop_toTopOf="@+id/ph_imageView4"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/gilroy_bold"/>

    <TextView
        android:id="@+id/ph_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/ph_imageView2"
        app:layout_constraintTop_toTopOf="@+id/ph_imageView2"
        android:textColor="?attr/colorPrimary"
        android:fontFamily="@font/gilroy_bold"/>


    <ImageView
        android:id="@+id/ph_imageView4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/ph_iv_protein"
        app:layout_constraintTop_toBottomOf="@+id/ph_iv_protein"
        app:tint="?attr/colorPrimary"
        android:contentDescription="@string/placeholder" />

    <ImageView
        android:id="@+id/ph_imageView2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/ph_imageView4"
        app:layout_constraintTop_toBottomOf="@+id/ph_imageView4"
        app:tint="?attr/colorPrimary"
        android:contentDescription="@string/placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>